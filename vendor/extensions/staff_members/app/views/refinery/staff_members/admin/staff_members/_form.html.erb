<%= form_for [refinery, :staff_members_admin, @staff_member] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @staff_member,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title -%>
  </div>

  <div class='field'>
    <%= f.label :thumbnail -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :thumbnail_id,
               :image => @staff_member.thumbnail,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_id,
               :image => @staff_member.image,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:bio],
                :object => "staff_members/staff_member" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.staff_members.admin.staff_members.staff_member'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @staff_member.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
