<% content_for :body_content_title do %>
  <%= @testimonial.program %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Program</h1>
    <p>
      <%=raw @testimonial.program %>
    </p>
  </section>
  <section>
    <h1>Year</h1>
    <p>
      <%=raw @testimonial.year %>
    </p>
  </section>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @testimonial.name %>
    </p>
  </section>
  <section>
    <h1>Institution</h1>
    <p>
      <%=raw @testimonial.institution %>
    </p>
  </section>
  <section>
    <h1>Picture</h1>
    <p>
      <%= image_fu @testimonial.picture, nil %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @testimonial.content %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="testimonials">
      <% @testimonials.each do |testimonial| %>
        <li>
          <%= link_to testimonial.program, refinery.testimonials_testimonial_path(testimonial) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
