<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(carousel_image) -%>">
  <span class='title'>
    <%= carousel_image.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.carousel_images_carousel_image_path(carousel_image),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_carousel_images_admin_carousel_image_path(carousel_image),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.carousel_images_admin_carousel_image_path(carousel_image),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => carousel_image.title),
        :method => :delete %>
  </span>
</li>
